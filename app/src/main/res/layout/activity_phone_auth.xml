<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.phoneauthintication.PhoneAuthActivity"
    android:background="@drawable/image_road">

    <TextView
        android:id="@+id/activity_phone_auth_tv_phone_code"
        android:layout_width="69dp"
        android:layout_height="34dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:background="@drawable/rounded_square"
        android:text="@string/phone_code"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/activity_phone_auth_edit_phone_number"
        android:layout_width="238dp"
        android:layout_height="33dp"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_square"
        app:layout_constraintStart_toEndOf="@+id/activity_phone_auth_tv_phone_code"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_phone_auth_button_get_code"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/rounded_square"
        android:onClick="onGetCodeClick"
        android:text="@string/get_auth_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_phone_auth_edit_phone_number" />

    <EditText
        android:id="@+id/activity_phone_auth_edit_code"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="296dp"
        android:textAlignment="center"
        android:hint="@string/enter_auth_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_phone_auth_button_send_code"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_square"
        android:text="@string/send_auth_code"
        android:onClick="onSendCodeClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_phone_auth_edit_code" />


</androidx.constraintlayout.widget.ConstraintLayout>